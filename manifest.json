{
"manifest_version": 2,
"name": "Auto History Clearer",
"version": "1.1",
"description": "Automatically clears all browsing history on a set interval.",
"permissions": [
"browsingData",
"alarms",
"storage"
],
"background": {
"scripts": ["background.js"]
},
"browser_action": {
"default_title": "Auto History Clearer",
"default_popup": "options.html"
},
"options_ui": {
"page": "options.html",
"open_in_tab": true
},
"browser_specific_settings": {
"gecko": {
"id": "auto-history-clearer@example.com"
}
}
}
